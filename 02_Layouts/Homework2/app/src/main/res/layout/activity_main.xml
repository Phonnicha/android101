<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FF00">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvRGB"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:text="235-255-221"
            android:textColor="#696969"
            android:gravity="center"
            android:background="#EBE1DD"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="//RGB"
            android:layout_below="@id/tvRGB"
            android:layout_alignLeft="@id/tvRGB"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnColor1"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#EBE1DD"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnColor2"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ECCBCA"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnColor3"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#75839C"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnColor4"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#99A9BF"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnColor5"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#C3CCD5"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnColor6"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#DDE2E5"
            android:layout_weight="1"/>





    </LinearLayout>



</LinearLayout>
























