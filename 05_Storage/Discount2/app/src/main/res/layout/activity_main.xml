<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="#ffb7d0ca"
        android:text="price" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:background="#ffb7d0ca"
        android:gravity="right"
        android:text="75.00" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="original cost" />

    <EditText
        android:id="@+id/priceOriginal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="percent off" />

    <TextView
        android:id="@+id/tvPercentOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:gravity="center"
        android:text="25%" />

    <SeekBar
        android:id="@+id/seekBarPercentOff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:progress="25"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:text="Tax" />

    <CheckBox
        android:id="@+id/taxCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Include Tax 7%"
        />




</LinearLayout>
